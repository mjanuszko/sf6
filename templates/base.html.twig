<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><a href="{{ path('index.home') }}">Home</a></li>
                    <li><a href="{{ path('index.about') }}">O nas</a></li>
                    <li><a href="{{ path('index.hello', {'firstName': 'Michał'}) }}">Hello</a></li>
                    <li><a href="{{ path('index.top-game') }}">Top game</a></li>
                    <li><a href="{{ path('index.code') }}">Code</a></li>
                    <li><a href="{{ path('index.rank') }}">Rank</a></li>
                    <li><a href="{{ path('app_game_list') }}">Games</a></li>
                    {% if is_granted('ROLE_ADD') %}
                    <li><a href="{{ path('app_game_new') }}">New game</a></li>
                    {% endif %}
                    <li><a href="{{ path('app_news') }}">News</a></li>
                    {% if is_granted('ROLE_ADD') %}
                    <li><a href="{{ path('app_news_new') }}">New article</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <main>
        {% block body %}{% endblock %}
        </main>

        <footer>
            <p>Wszelkie prawa zastrzeżone</p>
        </footer>
    </body>
</html>
